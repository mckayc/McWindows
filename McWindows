# Set Chocolatey to auto-update every day
choco install choco-upgrade-all-at --params "'/DAILY:yes /TIME:05:00 /ABORTTIME:06:00'" -y
 
# Windows Updates
Install-WindowsUpdate -AcceptEula

# git stuff

# Create folder
mkdir ~\Documents\Git
cd ~\Documents\Git

# Checkout the McKayC Repository
git clone https://github.com/mckayc/McWindows

# Create Links for Scripts to start on startup
New-Item -ItemType SymbolicLink -Path "~\AppData\Roaming\Microsoft\Windows\Start Menu\Programs\Startup" -Name "volume.lnk" -Value "~\Documents\Git\McWindows\AutoHotKeys\volume.ahk"
New-Item -ItemType SymbolicLink -Path "~\AppData\Roaming\Microsoft\Windows\Start Menu\Programs\Startup" -Name "Bluetooth-Streamkeys.lnk" -Value "~\Documents\Git\McWindows\AutoHotKeys\Bluetooth-Streamkeys.ahk"

